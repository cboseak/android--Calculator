<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="40dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chrisboseak.calc.MainActivity"
    tools:showIn="@layout/activity_main"
    android:layout_height="wrap_content"
    android:background="#3a3a3a">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:weightSum="1"
            android:layout_weight="0.09">

            <TextView
                android:layout_width="296dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/numberDisplay"
                android:textAlignment="gravity"
                android:maxLength="12"
                android:gravity="bottom|right"
                android:textSize="50sp"
                android:paddingRight="10dp"
                android:layout_weight=".70"
                android:background="#f4f4f4"
                android:longClickable="false"
                android:numeric="signed|integer|decimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/currSign"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="#f4f4f4"
                android:layout_gravity="center_vertical|bottom|right"
                android:layout_weight=".30" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:background="#ffa001">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:textSize="35dp"

                android:text="1"
                android:id="@+id/button1"
                android:elevation="10dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="2"
                android:id="@+id/button2"
                android:textSize="35dp"
                android:elevation="10dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="3"
                android:elevation="10dp"
                android:id="@+id/button3"
                android:textSize="35dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".35"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:layout_marginLeft="5dp"
                android:textSize="35dp"
                android:elegantTextHeight="false"
                android:backgroundTint="#aaaaaa"
                android:background="#aaaaaa" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:background="#ffa001">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="4"
                android:id="@+id/button4"
                android:textSize="35dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="5"
                android:id="@+id/button5"
                android:textSize="35dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="6"
                android:id="@+id/button6"
                android:textSize="35dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".35"
                android:text="-"
                android:id="@+id/buttonMinus"
                android:layout_marginLeft="5dp"
                android:textSize="35dp"
                android:backgroundTint="#aaaaaa"
                android:background="#aaaaaa" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:background="#ffa001">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="7"
                android:id="@+id/button7"
                android:textSize="35dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="8"
                android:id="@+id/button8"
                android:textSize="35dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="9"
                android:id="@+id/button9"
                android:textSize="35dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".35"
                android:text="/"
                android:id="@+id/buttonDiv"
                android:layout_marginLeft="5dp"
                android:textSize="35dp"
                android:backgroundTint="#aaaaaa"
                android:background="#aaaaaa" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:background="#ffa001">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="0"
                android:id="@+id/button0"
                android:elevation="10dp"
                android:textSize="35dp"
                android:background="#d6d7d7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="C"
                android:id="@+id/buttonClear"
                android:textSize="35dp"
                android:elevation="10dp"
                android:background="#aaaaaa" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="="
                android:id="@+id/buttonEqual"
                android:textSize="35dp"
                android:backgroundTint="#aaaaaa"
                android:background="#aaaaaa" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".35"
                android:text="*"
                android:id="@+id/buttonMult"
                android:layout_marginLeft="5dp"
                android:elevation="10dp"
                android:textSize="35dp"
                android:backgroundTint="#aaaaaa"
                android:background="#aaaaaa" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Long Press 0 for Backspace."
                android:id="@+id/textViewbs"
                android:layout_weight="1"
                android:textColor="#656565"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Long Press * for Decimal"
                android:id="@+id/textViewdec"
                android:layout_weight="1"
                android:textColor="#656565"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
